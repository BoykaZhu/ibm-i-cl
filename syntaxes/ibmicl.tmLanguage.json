{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "IBMiCL",
	"patterns": [
		{
			"include": "#comment-block-break-length"
		},
		{
			"include": "#main-core"
		},
		{
			"include": "#main-core-parm"
		},
		{
			"include": "#keyword-control"
		},
		{
			"include": "#keyword-operator"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#entity"
		},
		{
			"include": "#comment-block"
		},
		{
			"include": "#constant-number"
		},
		{
			"include": "#label"
		},
		{
			"include": "#storage-type"
		}
	],
	"repository": {
		"keyword-control": {
			"patterns": [{
				"name": "keyword.control.ibmicl",
				"match": "\\b(?i)(IF|ENDDO|ELSE|COND|RETURN|DO|DCL|MONMSG|CHKOBJ|CHGVAR|RTVJOBA|RTVDTAARA|SNDPGMMSG|SNDMSG|SNDUSRMSG|CHGVAR|RST|DEL|RNM|ADDLIBLE|CHGJOB|DLYJOB|RCVMSG|CHGDTAARA|SAVLIB|RSTLIB|RSTOBJ|RTVUSRPRF|RMVLIBLE|DOFOR|DOUNTIL|DOWHILE|ENDSELECT|ITERATE|LEAVE|OTHERWISE|SELECT|WHEN|CRTDTAARA|DLTDTAARA|DSPDTAARA|RTVDTAARA|ENDRCV|DCLF|RCVF|RTVMBRD|SNDF|RSTLIB|SNDRCVF|WAIT|RMVMSG|SNDRPY|CHKOBJ|MKDIR|RTVSYSVAL|CRTCLMOD|DLTMOD|RNMOBJ|CRTCLPGM|CRTPGM|CRTSRVPGM|CRTBNDCL|RTVUSRPRF|LODIMGCLG|VRYCFG|DLTDEVD|CRTDEVOPT|RMDIR|CRTDIR|CPY|CRTIMGCLG|ADDIMGCLGE|LODIMGCLG|DLTIMGCLG|SBMJOB|RLSJOBQ|HOLDJOBQ|DLTOBJ|CRTJOBD|LODRUN|RMVOPTCTG|CHGATR|DLTF|CRTSAVF|CLRSAVF|SAV|CHGOWN|CHGPGP|SAVOBJ|STROBJCVN|CLRLIB|DLTLIB|LODIMGCLGE|SAVSAVFDTA|DSPTAP|OVRDBF|CRTPF|CPYFRMTAP|CPYTOSTMF|CHGAUT|CHGOWNER|CRTLIB|RVKOBJAUT|GRTOBJAUT|CHGPRTF|DSPOBJD|CRTDUPOBJ|CHGPGM|CHGOBJD|CHGCMD|DLTSRVPGM|CHGSRVPGM|DLTPGM|CPYF|DLCOBJ|CHGOBJOWN|CPYLIB|ALCOBJ|DLTPNLGRP|DLTCMD|CHGPF|CPYF|ADDLFM|DLTOVR|RCLACTGRP|CRTBNDDIR|ADDBNDDIRE|RTVMSG|RTVOBJD|RTVMSG|DLTDTAQ|CRTJRNRCV|CRTJRN|RMVPFTRG|ADDPFTRG|CHGPFTRG|UPDPGM|UPDSRVPGM|CRTVIEW|ENDJRNPF|DLTJRN|DLTJRNRCV|ADDRPYLE|DLTJRN|DLTJRNRCV|RMVRPYLE|CRTPRTF|OVRPRTF|RUNJVA|ADDENVVAR|RMVENVVAR|CHKOUT|PRDLIB|STRTCPSVR|ADDAJE|ADDJOBQE|ADDRTGE|CRTSBSD|CRTCLS|CRTJOBQ|CHKIN|CRTUSRPRF|ADDDIRE|CRTCMD|CRTBNDC|CRTSQLCI|CRTPNLGRP|DSPUSRPRF|CLRPFM|CRTDSPF|RTVCURDIR|CHGCURDIR|CHGCURLIB|CRTLF|DLTMNU|CPYFRMSTMF|DSPDIRE|DSPAUTHLR|DLTMSGQ|CRTMSGQ|DLTUSRQ|CRTSRCPF|CLROUTQ|CRTOUTQ|CRTMNU|CLOF|CLOSE|SNDSMTPEMM|OPNDBF|POSDBF|RUNSQL|RMVLNK|CPYSPLF|CHGUSRPRF|DLTLICPGM|ENDSBS|DLTSPLF|QSH|RTVNETA|DLTMSGF|FTP|RMVM|ADDPFM|DSPJOBLOG|STRSBS|CHKTAP|INZTAP|CRTCDR|SNDBRKMSG|RUNRMTCMD)\\b"
			}]
		},
		"keyword-operator": {
			"patterns": [{
				"name": "keyword.operator.ibmicl",
				"match": "=|¬|\\+|¬=|>|<|&|\\|<|\\|>|\\|\\||\\*AND|\\*OR|\\*EQ|\\*NE|\\*TCAT|\\*BCAT|\\*CAT|\\*|%"
			}]
		},
		"entity": {
			"patterns": [{
				"name": "entity.name.function.ibmicl",
				"match": "\\b(?i)(?<!&)(PARM|VAR|TYPE|THEN|LEN|EXEC|VALUE|CCSID|MSGID|OBJ|OBJTYPE|AUT|MSGF|MSGDTA|TOPGMQ|MSGTYPE|USER|TEXT|DTAARA|RTNVAR|SST|SUBSTRING|STG|QCMDEXC|DEFVAR|LIB|POSITION|MSGID|CMPDTA|MSG|TOMSGQ|TOUSR|RPYMSGQ|KEYVAR|IMGCLG|OPTION|IMGCLG|DIR|FROMFILE|IMGCLGIDX|REPLACE|OWNER|DTAAUT|SUBTREE|OBJAUT|TOOBJ|CFGOBJ|CFGTYPE|STATUS|DEVD|DEV|RSRCNAME|LCLINTNETA|KEEP|RMV|JOBQ|JOBD|CMD|VOL|VOLOPT|MEDLOC|JOB|ATR|OBJLNK|TGTRLS|ALWOBJDIF|NEWOWN|AUTL|NEWOWN|READONLY|RMVFILES|RMVSYMLNK|UPDHST|COMPACT|ENDOPT|SAVF|FILE|OUTPUT|TOFILE|FROMSEQNBR|TOMBR|FROMDEV|FROMREELS|FROMRCDLEN|FROMENDOPT|MBROPT|FROMBLKLEN|RCDLEN|MBR|SIZE|FROMMBR|TOSTMF|STMFOPT|CVTDTA|ENDLINFMT|CMDLBL|OUTFILE|DETAIL|FROMLIB|TOLIB|DATA|USRPRF|FMTOPT|CRTFILE|NEWOBJ|LOG|LOGCLPGM|SRVPGM|USEADPAUT|USRLIBL|BNDDIR|CLEAR|ASP|JRNRCV|JRN|MNGRCV|DLTRCV|NEWOBJ|DLTOPT|RPY|SEQNBR|INQMSGRPY|INQMSGRPY|SEQNBR|PAGESIZE|LPI|CTLCHAR|OUTQ|NBR|CLASS|ENVVAR|PROP|CST|TRG|PGMQ|MSGQ|SYSNAME|NEWLNK|LNKTYPE|PVTAUT|SERVER|HTTPSVR|MSGKEY|CRTPRNDIR|RCLRSC|SBSD|MAXACT|CMPVAL|CLS|MAXJOBS|POOLS|RUNPTY|AUTCHK|RTGDTA|RQSDTA|INLLIBL|PRTTXT|MSGFLIB|SYSVAL|PASSWORD|PWDEXP|USRCLS|INLMNU|USRID|DATE|ENBGUI|PMTFILE|HLPPNLGRP|HLPID|PMTOVRPGM|ALLOW|MAXPOS|VLDCKR|SRCFILE|SRCMBR|COMMIT|DBGVIEW|TGTCCSID|SYSIFCOPT|INLINE|DEFINE|MODULE|BNDSRVPGM|ACTGRP|PNLGRP|RSTDSP|RTNDIR|DIRNAMLEN|RTNUSRPRF|CURLIB|DIRNAMLEN|SYSLVL|INCFILE|ACCPTHSIZ|REUSEDLT|DATFMT|TIMFMT|GENLVL|MAXRCDS|USRDTA|USRDFNOPT|USRDFNDTA|MENU|FROMSTMF|OUTFILFMT|ALWALR|MSGQFULL|USRQ|CURUSER|RCP|SUBJECT|NOTE|ATTACH|CHARSET|OPNID|RTNVAL|SQL|DLY|LICPGM|RLS|SBS|RMTUSER|RMTLOCNAME|RMTPWD)\\b"
			}]
		},
		"constant-number": {
			"patterns": [{
				"name": "constant.numeric.ibmicl",
				"match": "\\b([0-9]+)\\b"
			}]
		},
		"label": {
			"patterns": [{
				"name": "markup.bold.ibmicl",
				"match": "^(?!.{16}).+:"
			}]
		},
		"main-core": {
			"patterns": [{
				"name": "entity.name.namespace.ibmicl",
				"match": "\\b(?i)(PGM|ENDPGM)\\b"
			}]
		},
		"main-core-parm": {
			"patterns": [{
				"name": "entity.name.tag.ibmicl",
				"match": "\\b(?i)(PARM)\\b"
			}]
		},
		"comment-block": {
			"patterns": [{
				"name": "comment.block.ibmicl",
				"match": "\\/\\*.*\\*\\/|\\/\\*.*\\+\\s*$|^((?!\\/\\*).)*\\*\\/$"
			}]
		},
		"comment-block-break-length": {
			"patterns": [{
				"name": "markup.italic.ibmicl",
				"match": "^.{81}"
			}]
		},
		"storage-type": {
			"patterns": [{
				"name": "storage.type.sub.ibmicl",
				"match": "\\b(?i)(SUBR|CALL|CALLSUBR|ENDSUBR|CALLPRC|RTNSUBR|INCLUDE|OMIT|GOTO)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.single.ibmicl",
			"begin": "'",
			"end": "'",
			"patterns": [
				{
					"name": "constant.character.escape.ibmicl",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.ibmicl"
}